# LLM Configuration
LLM_MODEL=distilgpt2
LLM_MAX_LENGTH=50
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9
LLM_REPETITION_PENALTY=1.0

# TTS Configuration
TTS_MODEL=facebook/mms-tts-eng
TTS_SPEED=1.0  # 1.0 is normal speed, lower for slower, higher for faster

# Pipeline Configuration
CHUNK_WORD_THRESHOLD=3  # How many words before creating a new chunk
SHOW_REALTIME_METRICS=true  # Whether to show metrics in real-time
SAVE_AUDIO=true  # Whether to save the generated audio
AUDIO_OUTPUT_PATH=combined_output.wav

# Performance Optimization
USE_CUDA=auto  # auto, true, or false
OPTIMIZE_MEMORY=true  # Use memory optimization techniques

# Network Configuration - Blendshapes UDP
BLENDSHAPES_UDP_IP=127.0.0.1  # IP address for blendshapes streaming
BLENDSHAPES_UDP_PORT=11111    # Port for blendshapes streaming

# Network Configuration - Audio UDP
AUDIO_UDP_IP=127.0.0.1  # IP address for audio streaming
AUDIO_UDP_PORT=11112    # Port for audio streaming